<% include header %>
<div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default" id="iota-pay">
            <div class="panel-body" style="word-wrap: break-word;">
                <h2>Send <%= displayAmount %> ($<%= usdAmount %>) to:</h2> 
                <p><%= address %> <a href="https://iotasear.ch/address/<%= address %>">(Search)</a></p> 
                </br>
                <div class="well">
                    <img class="img-responsive center-block" src="/qr/<%= address %>" alt="qrcode">
                </div>
                <div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
                        aria-valuemin="0" aria-valuemax="100" style="width:100%">
                          Payment completed
                        </div>
                </div>
            </div>
        </div> 
</div>
<% include footer %>